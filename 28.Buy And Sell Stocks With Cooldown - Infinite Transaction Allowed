#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    cin>>arr[i];
    int ob=-arr[0],os=0,oc=0;
    int nb,ns,oob;
    for(int i=1;i<n;i++){
        oob=ob;
        // cout<<oob<<"oob"<<endl;
        nb=oc-arr[i];
        //  cout<<nb<<"nb"<<endl;
        ob=ob>nb?ob:nb;
        //  cout<<ob<<"ob"<<endl;
        ns=arr[i]+oob;
        // if(i>1){
        oc=oc>os?oc:os;
         
         //}
        //  cout<<oc<<"oc"<<endl;
        //  cout<<ns<<"ns"<<endl;
        os=os>ns?os:ns;
        //  cout<<os<<"os"<<endl;
         
       }
  cout<<os<<endl;
    return 0;
}
